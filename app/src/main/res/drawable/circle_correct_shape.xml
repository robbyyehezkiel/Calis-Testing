<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/green" />
            <stroke
                android:width="2dp"
                android:color="@color/color_primary" /> <!-- Gold color -->
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <solid android:color="@android:color/transparent" />
            <padding
                android:bottom="4dp"
                android:left="4dp"
                android:right="4dp"
                android:top="4dp" />
            <corners android:radius="2dp" />
            <stroke
                android:width="0dp"
                android:color="@android:color/transparent" />
            <size
                android:width="48dp"
                android:height="48dp" />
        </shape>
    </item>
</layer-list>
